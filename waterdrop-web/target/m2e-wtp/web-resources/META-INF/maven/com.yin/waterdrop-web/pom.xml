			<artifactId>waterdrop-frame</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.yin.waterdrop</groupId>
			<artifactId>waterdrop-rpc</artifactId>
